#include <stdio.h>

int BinarySearchTree(int vector[], int key, int lenght)
{
    int bottom, top, middle;
    bottom = 0;
    top = lenght - 1;
    while (bottom <= top)
    {
        middle = (bottom + top) / 2;
        if (key == vector[middle])
            return middle;
        else if (key < vector[middle])
            top = middle - 1;
        else
            bottom = middle + 1;
    }
    return -1; /* Not found */
}

int main()
{
    int v[8] = {1, 2, 3, 4, 5, 7, 8, 9};
    int fun, x;
    printf("Put the value to be found: ");
    scanf("%d", &x);
    fun = BinarySearchTree(v, x, 8);
    if (fun == -1)
        printf("Value not found");
    else
        printf("Found in position %d", fun);

    return 0;
}
